                        }
                    ]
                },
                {
                    "name": "openjpeg2",
                    "buildsystem": "cmake-ninja",
                    "builddir": true,
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/uclouvain/openjpeg.git",
                            "tag": "v2.4.0",
                            "x-checker-data": {
                                "type": "git",
                                "tag-pattern": "^v([\\d.]+)$"
                            }
                        }
                    ],
                    "cleanup": [ "/bin", "/include", "/lib/openjpeg-*", "/lib/pkgconfig" ]
                }
