    "sdk": "org.kde.Sdk",
    "command": "labplot2",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--filesystem=host",
        "--filesystem=/tmp"
